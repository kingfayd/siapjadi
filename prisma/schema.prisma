generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum UserRole {
  ADMIN
  PENJOKI
  KLIEN
}

enum OrderStatus {
  PENDING
  WAITING_PAYMENT
  IN_PROGRESS
  REVISION
  COMPLETED
  CANCELLED
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          UserRole  @default(KLIEN)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  orders        Order[]       @relation("ClientOrders")
  tasks         Order[]       @relation("PenjokiTasks")
  withdrawals   Withdrawal[]
}

model Order {
  id            String      @id @default(cuid())
  subject       String
  description   String
  deadline      DateTime
  price         Float?
  status        OrderStatus @default(PENDING)
  fileUrl       String?     // Initial requirement files
  
  clientId      String
  client        User        @relation("ClientOrders", fields: [clientId], references: [id])
  
  penjokiId     String?
  penjoki       User?       @relation("PenjokiTasks", fields: [penjokiId], references: [id])
  
  submissions   Submission[]
  payment       Payment?
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Submission {
  id            String   @id @default(cuid())
  fileUrl       String
  notes         String?
  
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id])
  
  createdAt     DateTime @default(now())
}

model Payment {
  id            String            @id @default(cuid())
  amount        Float
  receiptUrl    String?           // For manual verification
  status        TransactionStatus @default(PENDING)
  
  orderId       String            @unique
  order         Order             @relation(fields: [orderId], references: [id])
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model Withdrawal {
  id            String            @id @default(cuid())
  amount        Float
  status        TransactionStatus @default(PENDING)
  receiptUrl    String?           // Proof of transfer from admin
  
  userId        String
  user          User              @relation(fields: [userId], references: [id])
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}
